TABLES: EKKO.
TYPE-POOLS: SLIS.
TYPES: BEGIN OF ekko,
         ebeln TYPE ekko-ebeln,
         bukrs TYPE ekko-bukrs,
         bstyp TYPE ekko-bstyp,
       END OF ekko.
DATA: IT_FCAT TYPE slis_t_fieldcat_alv,
      WA_FCAT TYPE slis_fieldcat_alv.
DATA: IT TYPE TABLE OF ekko,
      WA TYPE ekko.
SELECT-OPTIONS: S_EBELN FOR EKKO-EBELN.
START-OF-SELECTION.
  SELECT EBELN BUKRS BSTYP FROM EKKO INTO TABLE IT WHERE EBELN IN S_EBELN.
  WA_FCAT-FIELDNAME = 'EBELN'.
  WA_FCAT-SELTEXT_L = 'PO NUMBER'.
  WA_FCAT-EMPHASIZE = 'C2'.
  APPEND WA_FCAT TO IT_FCAT.
  CLEAR WA_FCAT.
  WA_FCAT-FIELDNAME = 'BUKRS'.
  WA_FCAT-SELTEXT_L = 'COMPANY CODE'.
  WA_FCAT-EMPHASIZE = 'C3'.
  APPEND WA_FCAT TO IT_FCAT.
  CLEAR WA_FCAT.
  WA_FCAT-FIELDNAME = 'BSTYP'.
  WA_FCAT-SELTEXT_L = 'TYPE'.
  WA_FCAT-EMPHASIZE = 'C4'.
  APPEND WA_FCAT TO IT_FCAT.
  CLEAR WA_FCAT.
  IF IT IS NOT INITIAL.
    CALL FUNCTION 'REUSE_ALV_GRID_DISPLAY'
      EXPORTING
        I_CALLBACK_PROGRAM = SY-REPID
        IT_FIELDCAT        = IT_FCAT
      TABLES
        T_OUTTAB           = IT.
    IF SY-SUBRC <> 0.
    ENDIF.
  ENDIF.
